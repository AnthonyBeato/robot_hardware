<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:macro name="robot" params="prefix">


        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>

        <material name="red">
            <color rgba="1 0 0 1"/>
        </material>

        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>

        <!-- BASE LINK -->

        <link name="base_link">
            
        </link>



        <!-- CHASSIS LINK -->
        
        <joint name="chassis_joint" type="fixed">
            <parent link="base_link"/>
            <child link="chassis"/>
            <origin xyz="-0.07 0 0"/>
        </joint>

        <link name="chassis">
            <visual>
                <origin xyz="0.07 0 0.003"/>
                <geometry>
                    <cylinder radius="0.08" length="0.05"/>
                </geometry>
                <material name="red"/>
            </visual>
            <collision>
                <origin xyz="0.07 0 0.003"/>
                <geometry>
                    <cylinder radius="0.08" length="0.05"/>
                </geometry>
                <material name="red"/>
            </collision>
            <xacro:inertial_cylinder mass="0.243" length="0.05" radius="0.08">
                <origin xyz="0.07 0 0.003" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="chassis">
            <material>
                Gazebo/Red
            </material>
        </gazebo>


        <!-- LEFT WHEEL LINK -->

        <joint name="left_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="left_wheel"/>
            <origin xyz="0 0.085 0" rpy="-${pi/2} 0 0" />
            <axis xyz="0 0 1"/>
        </joint>

        <link name="left_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.035" length="0.008"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.035" length="0.008"/>
                </geometry>
                <material name="black"/>
            </collision>
            <xacro:inertial_cylinder mass="0.007" length="0.008" radius="0.035">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="left_wheel">
            <material>
                Gazebo/Black
            </material>
        </gazebo>



        <!-- RIGHT WHEEL LINK -->

        <joint name="right_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="right_wheel"/>
            <origin xyz="0 -0.085 0" rpy="${pi/2} 0 0"/>
            <axis xyz="0 0 -1"/>
        </joint>

        <link name="right_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.035" length="0.008"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.035" length="0.008"/>
                </geometry>
                <material name="black"/>
            </collision>
            <xacro:inertial_cylinder mass="0.007" length="0.008" radius="0.035">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="right_wheel">
            <material>
                Gazebo/Black
            </material>
        </gazebo>

        <!-- CASTER WHEEL LINK -->

        <joint name="caster_wheel_joint" type="fixed">
            <parent link="chassis"/>
            <child link="caster_wheel"/>
            <origin xyz="0.005 0 -0.022"/>
        </joint>

        <link name="caster_wheel">
            <visual>
                <geometry>
                    <sphere radius="0.0127"/>
                </geometry> 
                <material name="white"/>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.0127"/>
                </geometry>
                <material name="white"/>
            </collision>
            <xacro:inertial_sphere mass="0.0165" radius="0.0127">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_sphere>
        </link>

        <gazebo reference="caster_wheel">
            <material>
                Gazebo/White
            </material>
            <mu1 value="0.001"/>
            <mu2 value="0.001"/>
        </gazebo>
    </xacro:macro>
</robot>